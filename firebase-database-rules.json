{
  "rules": {
    ".read": true,
    ".write": true,
    "buddy-voice-settings": {
      ".read": true,
      ".write": true,
      ".validate": "newData.hasChildren(['systemPrompt', 'voice', 'temperature'])"
    },
    "personality-profiles": {
      ".read": true,
      ".write": true,
      "$profileId": {
        ".validate": "newData.hasChildren(['id', 'name', 'systemPrompt'])"
      }
    }
  }
}
